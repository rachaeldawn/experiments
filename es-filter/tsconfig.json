{
  "compilerOptions": {
    "target": "es2018",
    "lib": [ "esnext", "DOM" ],
    "allowJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "types": ["node"]
  },
  "include": [ "**/*.ts" ]
}
